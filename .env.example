# Twilio
TWILIO_ACCOUNT_SID=your_sid_here
TWILIO_AUTH_TOKEN=your_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Grok API (X)
GROK_API_KEY=your_grok_key_here
GROK_MODEL=grok-3

# Helius (Solana webhooks)
HELIUS_API_KEY=your_helius_key_here
HELIUS_WEBHOOK_URL=http://localhost:3000/helius-webhook

# Server
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Voice (Pipecat)
PIPECAT_DEBUG=false
VOICE_MODE=non-interactive

# Testing
DRY_RUN=false
MOCK_TWILIO=false

# Grok polling interval (ms)
GROK_POLL_INTERVAL=45000
GROK_RATE_LIMIT=1000

# Seemplify Configuration
SEEMPLIFY_TOKEN_SYMBOL=SEEMPLIFY
SEEMPLIFY_MIN_PILOT_STAKE=100

# Call slots (Phase 2) - JSON string
CALL_SLOTS=[{"start":"08:00","duration":3600},{"start":"14:00","duration":3600},{"start":"20:00","duration":3600}]

# Token gating (Phase 3)
TOKEN_PRICE_USD=2
SOLANA_BURN_ADDRESS=11111111111111111111111111111112

# Voice TTS/STT
TTS_ENGINE=chatterbox
STT_ENGINE=faster-whisper
STT_MODEL=large-v3

# Local or Remote GPU
VOICE_GPU_ENDPOINT=http://localhost:8000
VOICE_GPU_REMOTE=false

# Phase 2: LLM + Avatar
LLM_ENDPOINT=http://localhost:8000/v1  # vLLM/Ollama endpoint
LLM_MODEL=meta-llama/Llama-2-7b-chat-hf
LLM_API_KEY=  # If using OpenAI/Claude/etc

AVATAR_SERVICE=heygen  # heygen | synthesia | d-id
AVATAR_API_KEY=  # HeyGen / Synthesia / D-ID API key
AVATAR_ID=default_avatar
VOICE_ID=default_voice

# Phase 3: Solana Governance
SOLANA_RPC=https://api.mainnet-beta.solana.com
SOLANA_PROGRAM_ID=  # Once deployed
TOKEN_MINT_ADDRESS=  # Your $TICKER token mint

# Phase 4: Akash Deployment
AKASH_PROVIDER_URL=http://localhost:3030
AKASH_ACCOUNT_ADDRESS=  # Your Akash account
AKASH_KEY_NAME=deployer

# Phase 4: Theta Streaming
THETA_API_URL=https://api.thetatoken.org/v2
THETA_API_KEY=  # Theta EdgeCloud API key
THETA_WALLET_ADDRESS=  # Your Theta wallet
